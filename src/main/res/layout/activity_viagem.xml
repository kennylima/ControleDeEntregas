<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextDestino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Destino" />

    <EditText
        android:id="@+id/editTextDataPartida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Data de Partida" />

    <EditText
        android:id="@+id/editTextDataChegada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Data de Chegada" />

    <Button
        android:id="@+id/buttonSalvarViagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar Viagem" />
</LinearLayout>
